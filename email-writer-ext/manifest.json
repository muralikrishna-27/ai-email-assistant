{
  "name": "Email Writer Assistant",
  "description": "AI-Powered email reply generator",
  "version": "1.0.0",
  "manifest_version": 3,

  "permissions": ["activeTab", "storage"],

"host_permissions": [
  "https://email-writer-backend-uj4z.onrender.com/*",
  "*://mail.google.com/*"
]
,

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
    "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
